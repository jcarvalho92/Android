<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity">

    <TextView
        android:id="@+id/txtQualification"
        android:layout_width="363dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:text="Qualification:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFullName" />

    <TextView
        android:id="@+id/txtProfession"
        android:layout_width="363dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:text="Profession:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQualification" />

    <TextView
        android:id="@+id/txtHobby"
        android:layout_width="363dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:text="Hobby:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProfession" />

    <TextView
        android:id="@+id/txtDreamJob"
        android:layout_width="363dp"
        android:layout_height="33dp"
        android:layout_marginTop="12dp"
        android:text="Dream Job:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHobby" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="197dp"
        android:layout_height="41dp"
        android:text="Inputs from Activity one"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/txtFullName"
        android:layout_width="363dp"
        android:layout_height="33dp"
        android:layout_marginTop="36dp"
        android:text="Full Name: "
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>